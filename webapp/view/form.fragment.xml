<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
		<Dialog>
				<f:SimpleForm id="idForm"
											minWidth="1024"
											maxContainerCols="2"
											editable="false"
											layout="ResponsiveGridLayout"
											title="Book"
											labelSpanL="3"
											labelSpanM="3"
											emptySpanL="4"
											emptySpanM="4"
											columnsL="2"
											columnsM="2">
						<f:content>
								<Label text="Person No."/>
								<Label text="{i18n>isbn}"/>
								<Input id="idIsbn"/>

								<Label text="{i18n>title}"/>
								<Input id="idTitle"/>

								<Label text="{i18n>author}"/>
								<Input id="idAuthor"/>

								<Label text="{i18n>language}"/>
								<Input id="idLanguage"/>

								<Label text="{i18n>publishedOn}"/>
								<DatePicker id="idDate"/>

								<Label text="{i18n>totalBooks}"/>
								<Input id="idTotalBooks"/>

								<Label text="{i18n>availableBooks}"/>
								<Input id="idAvailableBooks"/>
						</f:content>
				</f:SimpleForm>

				<buttons>
						<Button text="{i18n>closeBtn}" press="closeDialog" type="Reject"/>
						<Button text="{i18n>saveBtn}" press="onSave" type="Accept"/>
				</buttons>
		</Dialog>
</core:FragmentDefinition>
